---

import { getEntry, render } from "astro:content";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";

const friendsPage = await getEntry("spec", "friends");

if (!friendsPage) {
	throw new Error("Links page content not found");
}

const { Content } = await render(friendsPage);

const items = [
	{
		title: "Norphin`s Yard",
		desc: "Norph1n的后花园",
		link: "https://norph1n.top/",
		avatar: "https://norph1n.top/favicon/v1/avatar.jpg",
	},
	{
		title: "Azure Zeng's Blog",
		desc: "Azure Zeng 的小窝",
		link: "https://blog.azurezeng.com/",
		avatar: "https://azurezeng.com/friendly-link-image.png",
	},
	{
		title: "Nero978 的日记",
		desc: "Brave yourself, brave the world.",
		link: "https://nero978.top",
		avatar: "https://nero978.top/wp-content/uploads/2023/07/logo.jpg",
	},
	{
		title: "Kyomu's Blog",
		desc: "What is mind? No matter. What is matter? Never mind.",
		link: "https://kyomu.me/",
		avatar: "https://kyomu.me/wp-content/uploads/2024/09/1725636741-pfp.png",
	},
	{
		title: "極客死亡計劃",
		desc: "这里没有零散的学习笔记和生活琐事，而是专注编写有价值的文章。",
		link: "https://www.geedea.pro/",
		avatar: "https://www.geedea.pro/favicon.ico",
	},
	{
		title: "初之音",
		desc: "聆听心中最初的声音",
		link: "https://www.himiku.com/",
		avatar: "https://cravatar.cn/avatar/2fc4cf3560ff5a1cc64ea029896ab235?s=400",
	},
	{
		title: "雪萌天文台",
		desc: "发现巷子里的那颗星星",
		link: "https://blog.snowy.moe",
		avatar: "https://img.snowy.moe/head.png",
	},
];
---
<MainGridLayout title={i18n(I18nKey.friends)} description={i18n(I18nKey.friends)}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32 mb-4">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-8 my-4">
                {items.map((item) => (   
                    <div class="flex flex-nowrap items-stretch h-28 gap-4 rounded-[var(--radius-large)]">
                        <div class="w-28 h-28 flex-shrink-0 rounded-lg overflow-hidden bg-zinc-200 dark:bg-zinc-900">
                            <img src={item.avatar} alt="站点头像" class="w-full h-full object-cover">
                        </div>
                        <div class="grow w-full">
                            <div class="font-bold transition text-lg text-neutral-900 dark:text-neutral-100 mb-1">{item.title}</div>
                            <div class="text-50 text-sm font-medium">{item.desc}</div>
                        </div>
                        <a href={item.link} target="_blank" rel="noopener noreferrer"class="flex btn-regular w-[3.25rem] rounded-lg bg-[var(--enter-btn-bg)] hover:bg-[var(--enter-btn-bg-hover)] active:bg-[var(--enter-btn-bg-active)] active:scale-95">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="transition text-[var(--primary)] text-4xl mx-auto iconify iconify--material-symbols" width="1em" height="1em" viewBox="0 0 24 24">
                                <path fill="currentColor" d="M12.6 12L8.7 8.1q-.275-.275-.275-.7t.275-.7t.7-.275t.7.275l4.6 4.6q.15.15.213.325t.062.375t-.062.375t-.213.325l-4.6 4.6q-.275.275-.7.275t-.7-.275t-.275-.7t.275-.7z"></path>
                            </svg>
                        </a>
                    </div>
                ))}
            </div>
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>
</MainGridLayout>
